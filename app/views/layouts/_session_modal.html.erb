<div id="session-modal" class="reveal-modal">
  <div class="row session-container">
    <div class="large-12 small-12 columns">
      <a href="#" class="close-reveal-modal">Close</a>
      <%= form_for(:session, url: sessions_path) do |f| %>
        <h1><%= f.label :name, "Hi. Who are you?" %></h1>
        <%= f.text_field :name, class: "session-input" %>
        <h1><%= f.label :employer, "Who do you work for?" %></h1>
        <%= f.text_field :employer, class: "session-input" %>
        <%= f.submit "Sweet Deal.", class: "button large close-reveal-modal submit-session-button" %>
      <% end %>

    </div>
  </div>
</div>